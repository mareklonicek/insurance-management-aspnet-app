@model IEnumerable<Pojistenci.Models.TypPojisteni>

@{
    ViewData["Title"] = "Index";
}
<style>
     .btn:hover{ transition: transform .5s;transform: scale(1.1);box-shadow:5px 5px 8px black;}
    tr {transition: background 2s ease; }
    tr:hover{background:lightgray;} 
    li {display: inline;justify-content:flex-start}
    ul{display:flex;}
      img {position: absolute;  top: 60px;left:600px;width:100px;height:100px;}
</style>
<h1>Typy pojištení</h1><img src="~/Images/csob.png" /><br />
<br /><br />
<p>
    <a asp-action="Create" class="btn btn-info btn-sm">Zadat nový typ pojištění</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazev)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazev)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
