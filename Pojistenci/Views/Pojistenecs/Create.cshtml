@model Pojistenci.Models.PojistenecViewModel

@{
    ViewData["Title"] = "Create";
}
<style>
     .btn:hover{ transition: transform .5s;transform: scale(1.1);box-shadow:5px 5px 8px black;}
    tr {transition: background 2s ease; }
    tr:hover{background:lightgray;} 
    li {display: inline;justify-content:flex-start}
    ul{display:flex;}
      img {position: absolute;  top: 60px;left:600px;width:100px;height:100px;}
</style>
<h1>Create</h1>

<h4>Pojistenec</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pojistenec.FirstName" class="control-label"></label>
                <input asp-for="Pojistenec.FirstName" class="form-control" />
                <span asp-validation-for="Pojistenec.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pojistenec.Surname" class="control-label"></label>
                <input asp-for="Pojistenec.Surname" class="form-control" />
                <span asp-validation-for="Pojistenec.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pojistenec.Vek" class="control-label"></label>
                <input asp-for="Pojistenec.Vek" class="form-control" />
                <span asp-validation-for="Pojistenec.Vek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pojistenec.Registrovan" class="control-label"></label>
